@page "/page3"
@using LifetimesExperiment.Services
@inherits OwningComponentBase<ScopedService>
@inject SingletonService SingletonService
@inject TransientService TransientService
@inject ScopedService ScopedService

<h1>Page 3</h1>

<div>
    <h2>Component's lifetime scoped service</h2>
    <p>Initialized: @Service.GetInitializationDate()</p>
    <p>Message: @Service.GetMessage()</p>
</div>

<div>
    <h2>Singleton service</h2>
    <p>Initialized: @SingletonService.GetInitializationDate()</p>
    <p>Message: @SingletonService.GetMessage()</p>
</div>

<div>
    <h2>Transient service</h2>
    <p>Initialized: @TransientService.GetInitializationDate()</p>
    <p>Message: @TransientService.GetMessage()</p>
</div>

<div>
    <h2>Scoped service</h2>
    <p>Initialized: @ScopedService.GetInitializationDate()</p>
    <p>Message: @ScopedService.GetMessage()</p>
</div>

